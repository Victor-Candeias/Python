{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",  // The entry point of your app
                "FLASK_ENV": "development", // Enables debug mode
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger", // Optional: Disables Flask's built-in debugger
                "--reload"   // Optional: Disables auto-reload
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}

